{
    "files.readonlyInclude": {
        ".snapshots/**/*": true,
        "@releases/**/*": true,
        "dist/**/*": true,
        "docs/**/*": true,
        "node_modules/**/*": true,
        "src/astro/css/**/*": true,
        "src/docs/css/**/*": true,

        "src/scss/lib/config/_default.scss": true,
        "src/scss/lib/tokens/_default.scss": true,
        "src/scss/lib/config/_template.scss": true,
        "src/scss/lib/tokens/_template.scss": true,
        "src/scss/template/*/_config.scss": true,
        "src/scss/template/*/_tokens.scss": true,
    },
    "scss.scannerExclude": [
        "**/.git",
        "**/node_modules",
        "**/bower_components",
        ".snapshots",
        "@releases",
        "dist",
        "docs",
    ],
    "todo.embedded.exclude": [
        "**/._*",
        "**/._*/**",
        "**/node_modules/*",
        "node_modules/**",
        "@releases/**",
        ".vscode/**",
        "dist/**",
        "docs/**",
        "public/**",
        "src/astro/css/**",
        "src/docs/css/**",
    ],
}