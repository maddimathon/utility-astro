/* import - types */
import type { GenericElementProps } from '../../ts/00-types/index.js';
import type { Props as SidebarProps } from './Sidebar.js';

/* import - functions */

/* import - values */

/* import - components */

/* import - layouts */

/* TYPES ===================================== */

export type * from './Sidebar.js';

/* PROPS ===================================== */

export type Props = GenericElementProps<SidebarProps, 'aside'>;

const { class: classList = [], ...attributes }: Props =
    Astro.props.frontmatter ?? Astro.props;

/* CONSTANTS ===================================== */

const rendered = Astro.slots.has('default') && Astro.slots.render('default') || null;
---

<aside
    role='complementary'
    id='sidebar'
    class:list={['site-sidebar', '||', ...classList]}
    {...attributes}
>
    { rendered ? (
        <!-- SLOT: "sidebar" -->
        <slot />
        <!-- /SLOT: "sidebar" -->
    ) : (
        <p class="screen-reader-text">This sidebar is empty.</p>
        <!-- SLOT: "sidebar" (empty) / -->
    ) }
</aside>

<style lang='scss'>
    @forward '../css/screen-reader-text.css';
</style>
