{
    "extends": "../../tsconfig.json",
    "include": [
        "../../src/ts/**/*",
        "./src/ts/**/*"
    ],
    "exclude": [
        "./node_modules/**/*"
    ],
    "compilerOptions": {
        "baseUrl": "../../",
        "declaration": true,
        "declarationMap": true,
        "noEmit": false,
        "noImplicitAny": true,
        "outDir": "../../dist/ts/",
        "skipLibCheck": true,
        "sourceMap": true,
        "verbatimModuleSyntax": true
    }
}