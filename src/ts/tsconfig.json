{
    "extends": "../../tsconfig.json",
    "include": [
        "../../src/ts/**/*",
        "./src/ts/**/*"
    ],
    "exclude": [
        "./node_modules/**/*"
    ],
    "compilerOptions": {
        "module": "Node18",
        "moduleResolution": "Node16",
        "lib": [ 
            "DOM",
            "ES2022"
        ],

        "baseUrl": "../../",
        "declaration": true,
        "declarationMap": true,
        "noEmit": false,
        "outDir": "../../dist/ts/",
        "rootDir": "./",
        "skipLibCheck": true,
        "sourceMap": true,
        "verbatimModuleSyntax": true
    }
}