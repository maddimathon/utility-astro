{
    "extends": [
        "@maddimathon/build-utilities/tsconfig",
        "astro/tsconfigs/strictest"
    ],
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "./.astro/**/*",
        "./.scripts/**/*",
        "./node_modules/**/*"
    ],
    "compilerOptions": {
        "allowImportingTsExtensions": false,
        "baseUrl": "./",
        "exactOptionalPropertyTypes": false,
        "noImplicitAny": true,
        "skipLibCheck": false,
        "strictNullChecks": true,
        "verbatimModuleSyntax": true
    }
}