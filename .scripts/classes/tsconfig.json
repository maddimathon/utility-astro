{
    "extends": [
        "@maddimathon/build-utilities/tsconfig"
    ],
    "include": [
        "../../.scripts/**/*.ts",
        "./**/*.ts"
    ],
    "compilerOptions": {
        "allowImportingTsExtensions": false,
        "baseUrl": "../../",
        "checkJs": false,
        "declaration": false,
        "declarationMap": false,
        "exactOptionalPropertyTypes": false,
        "noImplicitAny": true,
        "noEmit": false,
        "sourceMap": false,
        "target": "ESNext",
        "verbatimModuleSyntax": false
    }
}