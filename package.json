{
    "name": "@maddimathon/utility-astro",
    "version": "0.1.0-alpha",

    "author": "Maddi Mathon (www.maddimathon.com)",
    "description": "Astro utilities to use in a variety of projects.",
    
    "keywords": [
        "astro-library",
        "astro-utilities",
        "astro-utility",
        "npm-package",
        "npm-package-astro"
    ],

    "homepage": "https://maddimathon.github.io/utility-astro",
    "license": "MIT",

    "repository": {
        "type": "git",
        "url": "https://github.com/maddimathon/utility-astro.git"
    },
    
    "engines": {
        "node": ">=22"
    },

    "type": "module",

    "files": [
        "./dist/**/*",
        "./LICENSE.md",
        "./package-lock.json",
        "./package.json",
        "./README.md"
    ],

    "main": "./dist/ts/index.js",
    "types": "./dist/ts/index.d.ts",

    "bugs": {
        "url": "https://github.com/maddimathon/utility-astro/issues"
    },

    "exports": {

        ".": {
            "sass": "./dist/scss/index.scss",
            "types": "./dist/ts/index.d.ts",

            "default": "./dist/ts/index.js"
        },

        "./jest.config":    "./jest.config.js",
        "./jest.config.js": "./jest.config.js",
        
        "./package.json": "./package.json",

        "./tsconfig":      "./tsconfig.json",
        "./tsconfig.json": "./tsconfig.json",

        "./components/*": [
            "./dist/astro/components/*.astro",
            "./dist/astro/components/*"
        ],

        "./layouts/*": [
            "./dist/astro/layouts/*.astro",
            "./dist/astro/layouts/*"
        ],

        "./astro/functions": {
            "types": "./dist/astro/functions/index.ts",
            "default": "./dist/astro/functions/index.ts"
        },

        "./astro/*": [
            "./dist/astro/*.astro",
            "./dist/astro/*.js",
            "./dist/astro/*/index.js",
            "./dist/astro/*"
        ],

        "./types": "./dist/ts/types/index.d.ts",
        "./types/*": [
            "./dist/ts/types/*.d.ts",
            "./dist/ts/types/*/index.d.ts",
            "./dist/ts/types/*"
        ],

        "./*.scss": [
            "./dist/scss/*.scss",
            "./dist/scss/_*.scss",
            "./dist/scss/*/index.scss",
            "./dist/scss/*/_index.scss",
            "./dist/scss/_*/index.scss",
            "./dist/scss/_*/_index.scss"
        ],

        "./*": {

            "sass": [
                "./dist/scss/*.scss",
                "./dist/scss/_*.scss",
                "./dist/scss/*/index.scss",
                "./dist/scss/*/_index.scss",
                "./dist/scss/_*/index.scss",
                "./dist/scss/_*/_index.scss"
            ],

            "types": [
                "./dist/ts/*.d.ts",
                "./dist/ts/*/index.d.ts"
            ],

            "default": [
                "./dist/ts/*.js",
                "./dist/ts/*/index.js",
                "./dist/ts/*"
            ]
        }
    },

    "scripts": {
        "commit": "sh .scripts/commit.sh",

        "astro:check": "astro check",
        "astro:build": "astro check && astro build",
        "astro:preview": "astro preview",
        "astro:start": "astro dev",

        "preview": "astro preview",

        "scripts-tsc": "tsc --project .scripts/classes/tsconfig.json",

        "precompile":     "npm run scripts-tsc",
        "predoc":         "npm run scripts-tsc",
        "predocument":    "npm run scripts-tsc",
        "prebuild":       "npm run scripts-tsc",
        "prequick-build": "npm run scripts-tsc",
        "prestart":       "npm run scripts-tsc",
        "prepackage":     "npm run scripts-tsc",
        "predryrun":      "npm run scripts-tsc",
        "prerelease":     "npm run scripts-tsc",
        
        
        "x-prestart": "npm run scripts-tsc && build-utils build -- --without minimize,prettify --without-document astro",

        "start": "run-p start:* watch:*",
            "watch:scss": "watch -p 'src/scss/**/*' -p 'src/docs/scss/**/*' -c 'build-utils document --only scss  --watchedWatcher \"watch:scss\" --watchedChange --watchedFilename \"$FILENAME\" --watchedEvent \"$EVENT\"'",
            "start:astro": "astro dev",


        "snap":     "build-utils snapshot",
        "snapshot": "build-utils snapshot",

        "compile": "build-utils compile",

        "test": "build-utils test",

        "doc":      "build-utils document",
        "document": "build-utils document",

        "build":       "build-utils build",
        "quick-build": "build-utils build -- --without minimize,prettify",

        "package": "build-utils package",
        "dryrun": "build-utils release --dryrun --without-package snapshot,zip",

        "release": "build-utils release"
    },
    
    "dependencies": {
        "@astrojs/check": "^0.9.4",
        "@astrojs/prism": "^3.3.0",
        "@maddimathon/utility-sass": "file:../utility-sass",
        "@maddimathon/utility-typescript": "2.0.0-beta",
        "astro": "^5.10.1",
        "luxon": "^3.6.1",
        "sass": "^1.89.2"
    },
    "devDependencies": {
        "@maddimathon/build-utilities": "0.2.0-alpha.1",
        "@types/jest": "30.0.0",
        "@types/luxon": "3.6.2",
        "@types/node": "22.15.30",
        "jest": "30.0.3",
        "npm-run-all": "4.1.5",
        "tsx": "4.20.3",
        "typedoc": "0.28.7",
        "typescript": "5.8.3",
        "watch-cli": "0.2.3"
    },

    "browserslist": [
        "last 3 major versions",
        "> 0.5%",
        "not dead"
    ]
}