{
    "name": "@maddimathon/utility-astro",
    "version": "0.1.0-alpha",

    "author": "Maddi Mathon (www.maddimathon.com)",
    "description": "Astro utilities to use in a variety of projects.",
    
    "keywords": [
        "astro-library",
        "astro-utilities",
        "astro-utility",
        "npm-package",
        "npm-package-astro"
    ],

    "homepage": "https://maddimathon.github.io/utility-astro",
    "license": "MIT",

    "repository": {
        "type": "git",
        "url": "https://github.com/maddimathon/utility-astro.git"
    },
    
    "engines": {
        "node": ">=22"
    },

    "type": "module",

    "files": [
        "./dist/**/*",
        "./LICENSE.md",
        "./package-lock.json",
        "./package.json",
        "./README.md"
    ],

    "main": "./dist/ts/index.js",
    "types": "./dist/ts/index.d.ts",

    "bugs": {
        "url": "https://github.com/maddimathon/utility-astro/issues"
    },

    "exports": {

        ".": {
            "astro": "./dist/ts/index.js",
            "sass": "./dist/scss/lib/index.scss",
            "types": "./dist/ts/index.d.ts",
            "default": "./dist/ts/index.js"
        },

        "./jest.config.js": "./jest.config.js",
        "./package.json": "./package.json",
        "./tsconfig.json": "./tsconfig.json",

        
        "./components/*": "./dist/astro/components/*.astro",
        "./css/*": "./dist/astro/css/*.css",
        "./layouts/*": "./dist/astro/layouts/*.astro",
        "./support/*": "./dist/astro/support/*.astro",

        "./astro/functions": "./dist/astro/functions/index.ts",

        "./astro/*": [
            "./dist/astro/*.astro",
            "./dist/astro/*.js",
            "./dist/astro/*/index.js",
            "./dist/astro/*"
        ],


        "./config.scss": "./dist/scss/config/index.scss",
        "./config/*.scss": [
            "./dist/scss/config/*.scss",
            "./dist/scss/config/_*.scss",
            "./dist/scss/config/*/index.scss",
            "./dist/scss/config/*/_index.scss"
        ],

        "./notice.scss": "./src/scss/_notice.scss",
        
        "./templates/*.scss": [
            "./dist/scss/templates/*.scss",
            "./dist/scss/templates/*/index.scss",
            "./dist/scss/templates/*/_index.scss"
        ],

        "./tokens.scss": "./src/scss/tokens/index.scss",
        "./tokens/*.scss": [
            "./dist/scss/tokens/*.scss",
            "./dist/scss/tokens/_*.scss",
            "./dist/scss/tokens/*/index.scss",
            "./dist/scss/tokens/*/_index.scss"
        ],


        "./*.scss": [
            "./dist/scss/templates/*/index.scss",
            "./dist/scss/templates/*/_index.scss",
            "./dist/scss/lib/*",
            "./dist/scss/lib/_*",
            "./dist/scss/lib/*/index.scss",
            "./dist/scss/lib/*/_index.scss",
            "./dist/scss/templates/_*/index.scss",
            "./dist/scss/templates/_*/_index.scss"
        ],

        "./*": {
            
            "sass": [
                "./dist/scss/templates/*/index.scss",
                "./dist/scss/templates/*/_index.scss",
                "./dist/scss/lib/*",
                "./dist/scss/lib/_*",
                "./dist/scss/lib/*/index.scss",
                "./dist/scss/lib/*/_index.scss",
                "./dist/scss/templates/_*/index.scss",
                "./dist/scss/templates/_*/_index.scss"
            ],

            "types": [
                "./dist/ts/*.d.ts",
                "./dist/ts/*/index.d.ts",
                "./dist/ts/*"
            ],

            "astro": [
                "./dist/ts/*.js",
                "./dist/ts/*/index.js",
                "./dist/ts/*"
            ],

            "default": [
                "./dist/ts/*.js",
                "./dist/ts/*/index.js",
                "./dist/ts/*"
            ]
        }
    },

    "scripts": {
        "commit": "sh .scripts/commit.sh",

        "astro:check": "astro check",
        "astro:build": "astro check && astro build",
        "astro:preview": "astro preview",
        "astro:start": "astro dev",

        "preview": "astro preview",
        
        
        "x-prestart": "build-utils build -- --without minimize,prettify --without-document astro",

        "start": "run-p watch:* start:*",
            "watch:astro": "watch                                                            -p 'src/astro/**/*'     -c 'build-utils compile  --only astro                               --watchedWatcher \"watch:astro\" --watchedChange --watchedFilename \"$FILENAME\" --watchedEvent \"$EVENT\"'",
          "x-watch:scss":  "watch -p 'node_modules/@maddimathon/utility-sass/dist/scss/**/*' -p 'src/scss/**/*'      -c 'npm run quick-build -- --only-document scss --only-compile scss --watchedWatcher \"watch:scss\"  --watchedChange --watchedFilename \"$FILENAME\" --watchedEvent \"$EVENT\"'",
            "watch:ts":    "watch -p 'node_modules/@maddimathon/utility-sass/dist/ts/**/*'   -p 'src/ts/**/*'        -c 'build-utils compile  --only ts                                  --watchedWatcher \"watch:ts\"    --watchedChange --watchedFilename \"$FILENAME\" --watchedEvent \"$EVENT\"'",
          "x-watch:docs":  "watch -p 'node_modules/@maddimathon/utility-sass/dist/scss/**/*' -p 'src/docs/scss/**/*' -c 'build-utils document --only scss                                --watchedWatcher \"watch:docs\"  --watchedChange --watchedFilename \"$FILENAME\" --watchedEvent \"$EVENT\"'",
            "start:astro": "astro dev",


        "snap":     "build-utils snapshot",
        "snapshot": "build-utils snapshot",

        "compile": "build-utils compile",

        "test": "build-utils test",

        "doc":      "build-utils document",
        "document": "build-utils document",

        "build":       "build-utils build",
        "quick-build": "build-utils build -- --without minimize,prettify",

        "package": "build-utils package",
        "dryrun": "build-utils release --dryrun --without-package snapshot,zip",

        "release": "build-utils release"
    },
    
    "dependencies": {
        "@astrojs/prism": "^3.3.0",
        "@maddimathon/utility-sass": "file:../utility-sass",
        "@maddimathon/utility-typescript": "file:../utility-typescript",
        "astro": "^5.13.7",
        "luxon": "^3.7.2",
        "sass": "^1.92.1",
        "zod": "^3.25.76"
    },
    "devDependencies": {
        "@astrojs/check": "^0.9.4",
        "@maddimathon/build-utilities": "0.3.0-alpha",
        "@types/jest": "30.0.0",
        "@types/luxon": "3.7.1",
        "@types/node": "22.15.30",
        "jest": "30.1.3",
        "npm-run-all": "4.1.5",
        "tsx": "4.20.5",
        "typedoc": "0.28.12",
        "typedoc-plugin-markdown": "4.9.0",
        "typedoc-plugin-inline-sources": "1.3.0",
        "typescript": "5.9.2",
        "watch-cli": "0.2.3"
    },

    "peerDependencies": {
        "@astrojs/prism": "^3.3.0",
        "@maddimathon/utility-sass": "~0.1.0",
        "@maddimathon/utility-typescript": "~2.0.0-beta",
        "astro": "^5.13.7",
        "sass": "^1.92.1",
        "zod": "^3.25.76"
    },
    "peerDependenciesMeta": {

        "@astrojs/prism": {
            "optional": true
        },

        "sass": {
            "optional": true
        },

        "zod": {
            "optional": true
        }
    },

    "browserslist": [
        "last 3 major versions",
        "> 0.5%",
        "not dead"
    ]
}